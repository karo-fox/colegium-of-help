<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:vm="using:Collegium_of_Help.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Collegium_of_Help.Views.CharacterSelectionView"
			 x:DataType="vm:CharacterSelectionViewModel"
			 >
	<Panel>
		<ItemsControl ItemsSource="{Binding Characters}">
			<ItemsControl.ItemsPanel>
				<ItemsPanelTemplate>
					<WrapPanel />
				</ItemsPanelTemplate>
			</ItemsControl.ItemsPanel>
			<ItemsControl.ItemTemplate>
				<DataTemplate>
					<StackPanel>
						<TextBlock Text="{Binding Name}" />
						<TextBlock Text="{Binding Class.Name}" />
						<TextBlock Text="{Binding Race.Name}" />
						<Button x:Name="CharacterDetails" Content="Zobacz" Command="{Binding $parent[ItemsControl].((vm:CharacterSelectionViewModel)DataContext).Host.GoToCharacterDetailsCommand}" CommandParameter="{Binding .}"/>
						<Button Content="Usuń" Command="{Binding $parent[ItemsControl].((vm:CharacterSelectionViewModel)DataContext).RemoveCommand}" CommandParameter="{Binding .}" />
					</StackPanel>
				</DataTemplate>
			</ItemsControl.ItemTemplate>
		</ItemsControl>
		<Button Content="Nowa postać" Command="{Binding Host.GoToCharacterFormCommand}" />
	</Panel>
</UserControl>
